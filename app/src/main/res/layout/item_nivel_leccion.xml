<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/cv_middle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="18dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:padding="8dp"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@color/primaryTextColor"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/cv_imagen_nivel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/for_middle" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_descripcion_nivel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descripcion de la leccion para intermedios"
                android:textColor="@color/primaryTextColor" />


        </LinearLayout>
    </TableRow>
</android.support.v7.widget.CardView>
